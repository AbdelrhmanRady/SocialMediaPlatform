@model RegisterViewModel

@{
    ViewData["Title"] = "Register Page";
}
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="loginContainer">

    <form class="loginForm bg-light d-block" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="FirstName" class="form-label">First Name *</label>
            <input class="form-control" asp-for="FirstName">
        </div>
        <div class="mb-3">
            <label asp-for="LastName" class="form-label">Last Name *</label>
            <input class="form-control" asp-for="LastName">
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email address *</label>
            <input class="form-control" asp-for="Email">
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
            <label asp-for="password" class="form-label">Password *</label>
            <input class="form-control" asp-for="password">
        </div>
        <div class="mb-3">
            <label asp-for="confirmPassword" class="form-label">Confirm Password *</label>
            <input class="form-control" asp-for="confirmPassword">
        </div>
        <div class="mb-3">
            <label asp-for="City" class="form-label">City *</label>
            <input class="form-control" asp-for="City">
        </div>
        <div class="mb-3">
            <label asp-for="Gender" class="form-label">Gender *</label>
            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                <option value="">Please Select</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="Birthday" class="form-label">Birthday Date *</label>
            <input min="1950-01-01" max="2010-12-31" class="form-control" asp-for="Birthday">
        </div>
        <div class="mb-3">
            <label asp-for="Photo" class="form-label">Profile Picture</label>
            <input accept="image/*" class=" form-control" asp-for="Photo">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Remember me</label>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>

